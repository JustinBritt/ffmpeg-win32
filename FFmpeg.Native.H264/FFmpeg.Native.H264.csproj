<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.4</TargetFramework>
    <FFmpegDir>$(MSBuildThisFileDirectory)\..\ffmpeg-3.3.4\</FFmpegDir>
    <KvazaarDir>$(MSBuildThisFileDirectory)\..\kvazaar-1.1.0\</KvazaarDir>
    <PackageIconUrl>https://ffmpeg.org/favicon.ico</PackageIconUrl>
    <Authors>FFmpeg Team</Authors>
    <Company></Company>
    <Description>Contains the native binaries of a LGPL build FFmpeg which only includes the H264 decoder.</Description>
    <Copyright>FFmpeg Team</Copyright>
    <PackageLicenseUrl>https://github.com/qmfrederik/ffmpeg-win32/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/qmfrederik/ffmpeg-win32/</PackageProjectUrl>
    <RepositoryUrl>https://github.com/qmfrederik/ffmpeg-win32/</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>ffmpeg native h264</PackageTags>
    <AssemblyVersion>3.3.4.0</AssemblyVersion>
    <FileVersion>3.3.4.0</FileVersion>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="$(FFmpegDir)\libavcodec\avcodec-57.dll">
      <PackagePath>runtimes/win7-x64/native/</PackagePath>
    </Content>
    <Content Include="$(FFmpegDir)\libavformat\avformat-57.dll">
      <PackagePath>runtimes/win7-x64/native/</PackagePath>
    </Content>
    <Content Include="$(FFmpegDir)\libavutil\avutil-55.dll">
      <PackagePath>runtimes/win7-x64/native/</PackagePath>
    </Content>
    <Content Include="$(FFmpegDir)\libswscale\swscale-4.dll">
      <PackagePath>runtimes/win7-x64/native/</PackagePath>
    </Content>
    <Content Include="/usr/x86_64-w64-mingw32/lib/libwinpthread-1.dll">
      <PackagePath>runtimes/win7-x64/native/</PackagePath>
    </Content>

    <Content Include="$(KvazaarDir)\src\.libs\libkvazaar-3.dll">
      <PackagePath>runtimes/win7-x64/native/</PackagePath>
    </Content>
  </ItemGroup>

</Project>
